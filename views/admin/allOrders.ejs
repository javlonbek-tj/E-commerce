<%- include('../includes/head.ejs') %> <% if(orders && orders.length <= 0) { %>
<h3 class="text-center mts">Buyurtmalar mavjud emas</h3>
<% } else { %>
<div class="container mts">
  <div class="row">
    <div class="col-md-8">
      <% for(let order of orders) {%>
      <div class="mb-5">
        <h2 class="text-center text-warning fw-bold mb-3">Buyurtma raqami: <%= order.id %></h2>
        <% for(let product of order.products) {%>
        <div class="d-flex align-items-center justify-content-between mb-5 cart cart-item">
          <div class="d-flex align-items-center cartImg">
            <a href="/products/<%= product.id %>"
              ><img src="/<%= product.images[0].imageUrl %>" alt="Product Image" class="product-image"
            /></a>
            <h4 class="ms-3 mt-3"><%= product.name %></h4>
          </div>
          <div>
            <div>
              <h4 class="text-primary">Narxi: <%= product.price%>  so‘m</h4>
              <h4><%= product.orderItem.quantity %> dona</h4>
              <h3>Umumiy miqdor: <%= product.price * product.orderItem.quantity %>  so‘m</h3>
            </div>
          </div>
        </div>
        <% }%>
        <div>
          <h3 class="text-center mb-3">Buyurtmachi ma'lumotlari:</h3>
          <div class="d-flex justify-content-between text-secondary">
            <h4>F.I.O:</h4>
            <h4><%= order.orderItem.userName %></h4>
          </div>
          <div class="d-flex justify-content-between text-secondary">
            <h4>Telefon raqami:</h4>
            <h4><%= order.orderItem.phone %></h4>
          </div>
          <div class="d-flex justify-content-between text-secondary">
            <h4>Viloyat:</h4>
            <h4><%= order.orderItem.province %></h4>
          </div>
          <div class="d-flex justify-content-between text-secondary">
            <h4>Tuman:</h4>
            <h4><%= order.orderItem.region %></h4>
          </div>
          <div class="d-flex justify-content-between text-secondary">
            <h4>Aholi punkti:</h4>
            <h4><%= order.orderItem.extraAddress %></h4>
          </div>
          <div class="d-flex justify-content-between text-secondary">
            <h4>Manzil:</h4>
            <h4><%= order.orderItem.address %></h4>
          </div>
        </div>
      </div>
      <% }%>
    </div>
  </div>
</div>
<% } %> <%- include('../includes/end.ejs') %>
