<%- include('../includes/head.ejs') %>
<section class="mts">
  <div class="container w-50">
    <% if(errorMessage) { %>
    <h3 class="text-center text-danger mb-5"><%= errorMessage %></h3>
    <% } %>
    <form class="input-group mb-5" action="/admin/brand" method="POST">
      <input type="text" class="form-control fs-3" placeholder="Mahsulot brandi" name="name" />
      <button class="btn btn-outline-secondary fs-3" type="submit" id="button-addon2">Qo'shish</button>
    </form>
    <div class="mts">
      <% if (brands?.length > 0) { %>
      <h3>Barcha mahsulot brandlari:</h3>
      <ul>
        <% for (brand of brands) { %>
        <form class="d-flex" action="/admin/delete-brand" method="POST">
          <input type="hidden" name="brandId" value="<%= brand.id %>" />
          <li class="fs-3 me-4"><%= brand.name %></li>
          <button type="submit" class="bg-none"><i class="fa-solid fa-trash text-danger fs-5"></i></button>
        </form>
        <% } %>
      </ul>
      <% } else { %>
      <h3>Mahsulot brandi mavjud emas.</h3>
      <% } %>
    </div>
  </div>
</section>
<section class="mbs"></section>
<%- include('../includes/end.ejs') %>
